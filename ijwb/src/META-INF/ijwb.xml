<idea-plugin>
  <vendor>JetBrains</vendor>

  <extensions defaultExtensionNs="com.intellij">
    <registryKey
      defaultValue="true"
      description="Determines whether AutoImportProjectOpenProcessor is a strong info holder."
      key="bazel.project.auto.open"
      overrides="true"/>
    <registryKey
      defaultValue="true"
      description="Mark execroot as dirty before refresh after sync"
      key="bazel.sync.mark.dirty"
      overrides="true"/>
    <pluginReplacement implementation="com.google.idea.blaze.ijwb.deprecation.BazelPluginReplacement"/>
  </extensions>
</idea-plugin>
